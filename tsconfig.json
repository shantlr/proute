{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
    "moduleResolution": "bundler",
    "module": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
